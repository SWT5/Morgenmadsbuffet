@using System.Linq
@using Microsoft.EntityFrameworkCore.Internal
@model RestaurantViewModel
@{
    ViewData["Title"] = "RestaurantMain";
}

<h1>RestaurantMain</h1>



    <table class="table">
        <thead>
            <tr>
                <th>
                    Checked In
                    @*@Html.DisplayNameFor(model => model.Checkedin)*@
                </th>
                <th>
                    Room Number
                    @*@Html.DisplayNameFor(model => model.RoomNumber)*@
                </th>
                <th>
                    Amount of Adults
                    @*@Html.DisplayNameFor(model => model.AmountAdults)*@
                </th>
                <th>
                    Amount of Children
                    @*@Html.DisplayNameFor(model => model.AmountChildren)*@
                </th>
                
        </tr>
        </thead>
        <tbody>
            <form method="post">
                @for (int i = 0; i < Model.Bookings.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.CheckBoxFor(r => r.Bookings[i].Checkedin)
                        </td>

                        <td>
                            @Model.Bookings[i].RoomNumber
                        </td>
                        <td>
                            @Model.Bookings[i].AmountAdults
                        </td>
                        <td>
                            @Model.Bookings[i].AmountChildren
                        </td>
                    </tr>
                }
            <tr>
                <input type="submit" value="save" />
                Total bookings: @Model.TotalAmountGuests
            </tr>
              
            </form>
        </tbody>
    </table>

